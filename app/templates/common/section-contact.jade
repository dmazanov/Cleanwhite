section.section.section-contact#contact
	.container
		.row
			.col-lg-12
				h3.contact__title contact
		.row
			.col-sm-4.col-xs-12
				.map
					.map__text Where are we located?
					.map__img-wrap
						img(src="/img/map.jpg", alt="map").map__img
			.col-sm-7.col-sm-offset-1.col-xs-12
				.contact-col
					.contact__text Want to contact us now? Just drop us a line below.
					form.contact-form
						.row
							.col-lg-12
								textarea(name="message", cols="30", rows="10", placeholder="Leave us a message...").textarea
						.row
							.col-sm-8.col-xs-12
								input(type="email", name="email", placeholder="your@mail.com").input-email
							.col-sm-4.col-xs-12
								button(type="submit").btn SEND
									i.sprite.sprite-Composite-Path
